%table{style: 'width:100%; background-color:#A3A3A3;border:0;font-size: 10px;color:#000000'}
  %tbody
    %tr
      %td{style:'width: 50%;border-right: 1px solid #fff;padding-left: 5px;'}
        %p
          %u
            Заказчик:
          = @full_name
        %p
          %u
            Email:
          = @order.email
        %p
          %u
            Телефон:
          = @order.phone
        %p
          %u
            Город:
          = @order.city
        %p
          %u
            Адрес доставки:
          = @order.address
        %p
          %u
            Индекс:
          = @order.zip_code
      %td{style:'width:50%;'}
        -@order.line_items.each_with_index do |item, index|
          %div
            %p{style:'font-weight:bold;'}
              №:
              = index + 1
            %div{style: 'float:left;width:100%;'}
              %div{style: 'float:left;'}
                = image_tag('http://127.0.0.1:3000/' + item.product.product_attachments.first.image_url(:thumb), style: 'width:110px; height:110px;')
              %div
                %p
                  Наименование:
                  = item.product.title
                %p
                  Объем:
                  = item.product.product_properties.first.volume
                  мл
                %p
                  Исполенение:
                  = item.product.product_properties.first.performance
                %p
                  Цена:
                  = item.product.product_properties.first.property_price
                %p
                  Количество:
                  = item.quantity
